{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "esnext",
		"target": "esnext",
		"types": ["bun-types"],
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"noImplicitAny": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"pretty": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "build",
		"allowJs": false,
		"noEmit": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"importHelpers": true,
		"baseUrl": ".",
		"strict": true,
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
